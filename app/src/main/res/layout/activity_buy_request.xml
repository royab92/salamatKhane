<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyRequestActivity"
    android:background="@color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ImageView
        android:id="@+id/imageView3"
        app:layout_widthPercent="5%"
        app:layout_heightPercent="3%"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentTop="true"
        app:layout_marginLeftPercent="5%"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/notification" />
    <TextView
        android:id="@+id/textView"
        app:layout_widthPercent="83%"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="2%"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:text="انتخاب تصویر مناسب برای آگهی" />

    <ImageView
        android:id="@+id/pic"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="14%"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        app:srcCompat="@drawable/camera"
        android:clickable="true"
        android:onClick="clickpic"
        />
    <ImageView
        android:id="@+id/imageView5"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="14%"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/pic"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="1%"
        app:srcCompat="@drawable/camera"
        android:alpha="0.5"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/imageView6"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="14%"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/imageView5"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="1%"
        app:srcCompat="@drawable/camera"
        android:alpha="0.5"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/imageView7"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="14%"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/imageView6"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="1%"
        app:srcCompat="@drawable/camera"
        android:alpha="0.5"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:text="گروه بندی"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/group"
        app:layout_widthPercent="82%"
        app:layout_heightPercent="6%"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView4"
        android:textColorHint="@color/hint"
        android:hint="تجهیزات پزشکی، دارو، آرایشی و بهداشتی"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:text="نام کالا"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/gname"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="6%"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10%"
        android:layout_below="@+id/textView5"
        android:textColorHint="@color/hint"
        android:text=""
        android:hint="نام فارسی کالا"
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group"
        android:layout_toLeftOf="@+id/gname"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="2%"
        android:text="دُز"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/mili"
        app:layout_widthPercent="26%"
        app:layout_heightPercent="6%"
        android:layout_toLeftOf="@+id/gname"
        app:layout_marginRightPercent="5%"
        android:layout_below="@+id/textView5"
        android:textColorHint="@color/hint"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gname"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:text="نام تولید کننده"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/producer"
        app:layout_widthPercent="82%"
        app:layout_heightPercent="6%"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView6"
        android:textColorHint="@color/hint"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/producer"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:text="تعداد"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/number"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="6%"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="9%"
        android:layout_below="@+id/textView7"
        android:textColorHint="@color/hint"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/producer"
        android:layout_toLeftOf="@+id/number"
        app:layout_marginRightPercent="3.5%"
        app:layout_marginTopPercent="2%"
        android:text="واحد"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/vahed"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="6%"
        android:layout_toLeftOf="@+id/number"
        app:layout_marginRightPercent="3.5%"
        android:layout_below="@+id/textView7"
        android:textColorHint="@color/hint"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/producer"
        android:layout_toLeftOf="@+id/vahed"
        app:layout_marginRightPercent="3.5%"
        app:layout_marginTopPercent="2%"
        android:text="تاریخ انقضا"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/expire"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="6%"
        android:layout_toLeftOf="@+id/vahed"
        app:layout_marginRightPercent="3.5%"
        android:layout_below="@+id/textView7"
        android:textColorHint="@color/hint"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:backgroundTint="@color/gray"
        android:alpha="0.4"
        android:textColor="@drawable/textfield"
        android:clickable="false"
        android:editable="false"
        android:focusable="false"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/button3"
        app:layout_widthPercent="82%"
        app:layout_heightPercent="6%"
        android:layout_below="@id/textView10"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        app:layout_marginTopPercent="2%"
        android:text="ثبت درخواست"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:onClick="clickSave"/>

    <TextView
        android:id="@+id/textView10"
        app:layout_widthPercent="90%"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/number"
        app:layout_marginTopPercent="4%"
        android:textSize="5pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:text="با ثبت درخواست خود در سیستم تبادل، شما شرایط و قوانین آن را پذیرفته اید" />
</android.support.percent.PercentRelativeLayout>