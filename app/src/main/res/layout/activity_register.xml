<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white">
    <ImageView
        android:id="@+id/imageView"
        app:layout_widthPercent="58%"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="3%"
        app:srcCompat="@drawable/salamatkhanelogo" />

    <TextView
        android:id="@+id/textView"
        app:layout_widthPercent="78%"
        android:layout_height="wrap_content"
       android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="4%"
        android:textSize="11pt"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textAlignment="center"
        android:text="اطلاعات داروخانه خود را در فرم زیر وارد کنید" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        app:layout_marginEndPercent="10%"
        app:layout_marginTopPercent="3%"
        android:text="نام داروخانه"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/name"
        app:layout_widthPercent="81%"
        app:layout_heightPercent="6%"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/province"
        app:layout_widthPercent="34%"
        app:layout_heightPercent="6%"
       android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="65%"
        app:layout_marginTopPercent="2%"

       />
    <Spinner
        android:id="@+id/city"
        app:layout_widthPercent="34%"
        app:layout_heightPercent="6%"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="39.5%"
        app:layout_marginTopPercent="2%"
        />
    <Spinner
        android:id="@+id/distinc"
        app:layout_widthPercent="34%"
        app:layout_heightPercent="6%"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="13.8%"
        app:layout_marginTopPercent="2%"
      />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/province"
        app:layout_marginTopPercent="2%"
        android:layout_alignParentEnd="true"
        app:layout_marginEndPercent="10%"
        android:text="تلفن داروخانه"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/phone"
        app:layout_widthPercent="58%"
        app:layout_heightPercent="6%"
      android:layout_alignParentEnd="true"
        app:layout_marginEndPercent="10%"
        android:layout_below="@+id/textView3"
        android:inputType="number"
        android:ems="8"
        android:text=""
        android:hint="22222222"
        android:textColorHint="@color/hint"
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/code"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="6%"
       android:layout_alignParentStart="true"
        app:layout_marginStartPercent="10%"
        android:layout_below="@+id/textView3"
        android:inputType="number"
        android:ems="3"
        android:text=""
        android:hint="021"
        android:textColorHint="@color/hint"
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        app:layout_marginTopPercent="2%"
        android:layout_alignParentEnd="true"
        app:layout_marginEndPercent="10%"
        android:text="آدرس داروخانه"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/address"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="15%"
        android:layout_alignParentStart="true"
        app:layout_marginStartPercent="10%"
        android:layout_below="@+id/textView4"
        android:text=""
        android:background="@drawable/edittext"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="@drawable/textfield"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button3"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="6%"
        android:layout_below="@id/address"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        app:layout_marginTopPercent="2%"
        android:text="ثبت داروخانه"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:onClick="clickSave"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</android.support.percent.PercentRelativeLayout>