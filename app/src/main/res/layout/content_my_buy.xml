<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MyBuyActivity"
    tools:showIn="@layout/app_bar_my_buy"
    android:background="@color/gback">
    <ImageView
        android:id="@+id/imageView2"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="30%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="15%"
        app:srcCompat="@drawable/sad"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="4%"
        android:text="درخواستی برای خرید ثبت نشده است"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:alpha="0.5"
        android:textSize="12pt"/>
    <TextView
        android:id="@+id/line"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="0.5%"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView7"
        app:layout_marginTopPercent="4%"
        android:background="@color/gray"
        android:alpha="0.6"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="4%"
        android:text="درخواست خرید خود را ثبت کنید"
        android:alpha="0.75"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:textSize="9pt"/>


    <ListView
        android:id="@+id/mobile_list"
        app:layout_widthPercent="90%"
        android:layout_height="wrap_content"
        android:divider="@color/gback"
        android:dividerHeight="10dp"
        android:layout_below="@+id/topl"
        app:layout_marginTopPercent="3%"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        >
    </ListView>
</android.support.percent.PercentRelativeLayout>