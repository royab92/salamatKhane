<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">


    <TextView
        android:id="@+id/textView11"
        app:layout_widthPercent="34%"
        app:layout_heightPercent="24%"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="3%"
        app:layout_marginRightPercent="5%"
        android:background="@color/white"
        android:text="" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="8%"
        app:layout_marginRightPercent="13%"
        app:srcCompat="@drawable/ampoule" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_marginTopPercent="15%"
        app:layout_marginRightPercent="20%"
        app:srcCompat="@drawable/capsule" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toLeftOf="@+id/textView11"
        app:layout_marginTopPercent="4%"
        app:layout_marginRightPercent="4%"
        android:layout_alignParentTop="true"
        android:textSize="8pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="pin name" />
    <TextView
        android:id="@+id/producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textView11"
        app:layout_marginTopPercent="2%"
        app:layout_marginRightPercent="4%"
        android:layout_below="@+id/name"
        android:textSize="6pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="pin producer" />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textView11"
        app:layout_marginTopPercent="3%"
        app:layout_marginRightPercent="4%"
        android:layout_below="@+id/producer"
        android:textSize="6pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="pin number" />
    <TextView
        android:id="@+id/expire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textView11"
        app:layout_marginTopPercent="1%"
        app:layout_marginRightPercent="4%"
        android:layout_below="@+id/number"
        android:textSize="6pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="pin expire date" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="3%"
        app:srcCompat="@drawable/report" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:layout_marginTopPercent="27%"
        app:layout_marginLeftPercent="3%"
        app:srcCompat="@drawable/hide" />

    <TextView
        android:id="@+id/line"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="0.5%"
        android:layout_below="@+id/imageView13"
        android:layout_centerHorizontal="true"
        android:text=""
        app:layout_marginTopPercent="2%"
        android:alpha="0.5"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="1%"
        android:text="drug store"
        android:textSize="6pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/list"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
       />
    <TextView
        android:id="@+id/sdist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_toLeftOf="@+id/sname"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="1%"
        android:text="store distinct"
        android:textSize="6pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/list"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
    <TextView
        android:id="@+id/scity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_toLeftOf="@+id/sdist"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="1%"
        android:text="store city"
        android:textSize="6pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/list"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
    <TextView
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_toLeftOf="@+id/scity"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="1%"
        android:text="store phone"
        android:textSize="6pt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/list"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />
</android.support.percent.PercentRelativeLayout>